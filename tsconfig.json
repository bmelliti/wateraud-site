{
  "compilerOptions": {
    /* ---------- Language & emit ---------- */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "noEmit": true,

    /* ---------- Module resolution ---------- */
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* ---------- Type safety ---------- */
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    /* ---------- Plugins ---------- */
    "plugins": [{ "name": "next" }]
  },

  /* ---------- File globs ---------- */
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules"]
}
