{
  "compilerOptions": {
    /* ---------- Language & emit ---------- */
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "noEmit": true,

    /* ---------- Module resolution ---------- */
    "moduleResolution": "bundler",
    "baseUrl": ".",                // enables path mapping
    "paths": {
      "@/*": ["src/*"]             // "@/lib/utils" -> "src/lib/utils.ts"
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* ---------- Type safety ---------- */
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "incremental": true,

    /* ---------- Plugins ---------- */
    "plugins": [
      { "name": "next" }           // Next.js language service
    ]
  },

  /* ---------- File globs ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
